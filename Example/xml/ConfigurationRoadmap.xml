<?xml version="1.0"?>
<root   xmlns="http://polimi.it/GDMImporter"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://polimi.it/GDMImporter /Example/xml/configurationSchema.xsd">
    <settings>
        <!--BASE WORKING FOLDER FOR THE IMPORTER-->
        <base_working_directory>C:\Users\ricca\Desktop\tesi\data</base_working_directory>
        <download_enabled>true</download_enabled>
        <transform_enabled>false</transform_enabled>
        <load_enabled>false</load_enabled>
        <parallel_execution>false</parallel_execution>
    </settings>
    <source_list>
        <source name="Roadmap_Epigenomics">
            <url>ftp.ncbi.nlm.nih.gov</url>
            <!-- <url>bioinf.iasi.cnr.it</url> -->
            <!-- <url>ftp.genboree.org</url> -->
            <source_working_directory>RoadmapEpigenomics</source_working_directory>
            <downloader>it.polimi.genomics.importer.DefaultImporter.FTPDownloader</downloader>
            <transformer>it.polimi.genomics.importer.DefaultImporter.NULLTransformer</transformer>
            <loader>it.polimi.genomics.importer.GMQLImporter.GMQLLoader</loader>
            <download_enabled>true</download_enabled>
            <transform_enabled>false</transform_enabled>
            <load_enabled>false</load_enabled>
            <parameter_list>

                <parameter>
                    <description>to know which user in gmql is going to be imported</description>
                    <key>gmql_user</key>
                    <value>public</value>
                </parameter>
                <parameter>
                    <description>for logging in ftp on tcga2bed need this anonymous user</description>
                    <key>username</key>
                    <value>anonymous</value>
                </parameter>
                <parameter>
                    <description>and also the corresponding null password</description>
                    <key>password</key>
                    <value>password</value>
                </parameter>
                <parameter>
                    <key>start_directory</key>
                    <value>/pub/geo/DATA/roadmapepigenomics/by_experiment/ChIP-Seq_input/</value>
                </parameter>
            </parameter_list>
            <dataset_list>
                <dataset name="ChIP-Seq">
                    <dataset_working_directory>ChIP-Seq</dataset_working_directory>
                    <schema_url location="http">ftp://bioinf.iasi.cnr.it/bed/acc/cnv/header.schema</schema_url>
                    <download_enabled>true</download_enabled>
                    <transform_enabled>false</transform_enabled>
                    <load_enabled>false</load_enabled>
                    <parameter_list>
                        <parameter>
                            <key>folder_regex</key>
                            <value>^/pub/geo/DATA/roadmapepigenomics/by_experiment/ChIP-Seq_input/.*</value>
                        </parameter>
                        <parameter>
                            <key>files_regex</key>
                            <value>.*\.bed.gz</value>
                        </parameter>
                    </parameter_list>
                </dataset>
            </dataset_list>
        </source>
    </source_list>
</root>